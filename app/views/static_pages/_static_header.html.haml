%body
  %header.navbar.navbar-fixed-top.navbar-inverse
    .container
      = link_to "Gallery", root_path, id: "logo"
      %nav
        %ul.nav.navbar-nav.navbar-right
          = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-inline'})do |f|
            .form-group
              = f.label :email, class: "sr-only"
              %li= f.email_field :email, autofocus: true, id: "inputEmail", class: " signin-field",  placeholder: "Email"
            .form-group
              = f.label :password, class: "sr-only"
              = f.password_field :password, autocomplete: "off", id: "inputPassword", class: "signin-field", placeholder: "Password"

            .btn
              = f.button "Log in"
