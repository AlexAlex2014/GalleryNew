%h1= t(:listing_categories)
= link_to "#{t(:new_category)}", new_category_path
%table
  %tr
    %th
    %th= "#{t(:title)}"
    %th= "#{t(:text)}"
    %th
    %th
    %th
    %th

  - @categories.each do |category|
    %tr
      %td= link_to(image_tag(@category_images[category].image.thumb.url, alt: 'Image'), category_path(category)) if @category_images.include?(category)
      %td= category.title
      %td= category.text
      %td= render 'subs/sub_link', subable_type: "Category", item_c: category
      %td= link_to "#{t(:show_category)}", category_path(category)
      %td= link_to "#{t(:edit_category)}", edit_category_path(category)
      %td= link_to "#{t(:destroy_category)}", category_path(category),
        method: :delete,
        data: { confirm: "#{t(:are_you_sure)}" }

= link_to "#{t(:images)}"'Images', controller: 'images'
= link_to "#{t(:comments)}"'Comments', controller: 'comments'
