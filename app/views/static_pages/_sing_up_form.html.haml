= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'callback signup-form'}) do |f|
  = devise_error_messages!
  = f.label :first_name, class: "sr-only"
  = f.text_field :first_name, placeholder: "#{t(:first_name)}", class: "form-control signup-field", required: ""
  = f.label :last_name, class: "sr-only"
  = f.text_field :last_name, placeholder: "#{t(:last_name)}", class: "form-control signup-field", required: ""
  = f.label :email, class: "sr-only"
  = f.email_field :email, placeholder: "#{t(:email)}", class: "form-control signup-field", required: ""
  = f.label :password, class: "sr-only"
  = f.password_field :password, autocomplete: "off", placeholder: "#{t(:password)}", class: "form-control signup-field", required: ""
  = f.label :password_confirmation, class: "sr-only"
  = f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{t(:password_confirmation)}", class: "form-control signup-field", required: ""
  = flash[:recaptcha_error]
  = recaptcha_tags
  = f.submit "#{t(:sing_up)}", class: "btn btn-warning btn-lg"


